<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.module3.HelloController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>

                <Menu text="Show Date/Time">
                    <items>
                        <MenuItem onAction="#onShowDateTime" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Write a Log">
                    <items>
                        <MenuItem onAction="#onWriteToFile" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Change Background Color">
                    <items>
                        <MenuItem onAction="#onRandomGreenHue" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Exit">
                    <items>
                        <MenuItem onAction="#onExit" text="Execute" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>
   <center>
        <TextArea fx:id="textBox" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
         </padding></TextArea>
   </center>

</BorderPane>
