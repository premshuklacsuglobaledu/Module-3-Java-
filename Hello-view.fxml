<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="rootPane" prefHeight="426.0" prefWidth="626.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.module3.HelloController">

    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>

                <Menu text="Show Date/Time">
                    <items>
                        <MenuItem onAction="#onShowDateTime" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Write a Log">
                    <items>
                        <MenuItem onAction="#onWriteToFile" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Change Background Color">
                    <items>
                        <MenuItem onAction="#onRandomGreenHue" text="Execute" />
                    </items>
                </Menu>

                <Menu text="Exit">
                    <items>
                        <MenuItem onAction="#onExit" text="Execute" />
                    </items>
                </Menu>

            </menus>
        </MenuBar>
    </top>
   <right>
        <TextArea fx:id="textBox" prefHeight="375.0" prefWidth="351.0" BorderPane.alignment="CENTER" />
   </right>

</BorderPane>
